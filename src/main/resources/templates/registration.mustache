{{< page}} {{$slot}}
<h1 class="text-center text-8 font-bold mt-4 mb-2">Register</h1>
{{#error}}
<p class="bg-red-200 text-black border-1 border-red-400 mx-4 text-center p-2">
  {{error}}
</p>
{{/error}}
<form method="post" class="flex flex-col grow px-4 mt-2">
  <label for="username">Username</label>
  <input
    type="text"
    class="mb-4"
    id="username"
    name="{{ usernameFieldName }}"
    required
    pattern="\S(.*\S)?"
    maxlength="{{ usernameMaxLength }}"
  />
  <label for="password">Password</label>
  <input
    id="password"
    class="mb-4"
    type="password"
    name="{{ passwordFieldName }}"
    required
    maxlength="{{ passwordMaxLength }}"
    minlength="{{ passwordMinLength }}"
  />
  <label for="confirm-password">Confirm Password</label>
  <input
    id="confirm-password"
    class="mb-4"
    type="password"
    name="{{confirmPasswordFieldName}}"
    required
    maxlength="{{ passwordMaxLength }}"
    minlength="{{ passwordMinLength }}"
  />
  {{< button}} {{$slot}}Register{{/slot}} {{/button}}
</form>
{{/slot}} {{/page}}
