{{< page}} 
  {{$head}}
    <script src="{{ google.scriptSrc }}" async></script>
    <script src="scripts/show-javascript-elements.js" async></script>
  {{/head}} 
  {{$slot}}
    <section class="flex flex-col grow px-4 md:mx-auto md:w-160">
      {{#warning}}
      <p class="bg-yellow-200 text-black border-1 border-yellow-400 text-center p-2 mt-4">
        {{warning}}
      </p>
      {{/warning}}
      <h1 class="text-center text-8 font-bold mt-4 mb-2 md:text-left">Login</h1>
      {{#error}}
      <p class="bg-red-200 text-black border-1 border-red-400 text-center p-2">
        {{error}}
      </p>
      {{/error}}
      <form method="post" class="flex flex-col grow mt-2 w-full">
        {{>authentication_form}}
        {{< button}} {{$text}}Login{{/text}} {{/button}}
        {{>google_sign_on_button}}
      </form>
    </section>
  {{/slot}} 
{{/page}}
