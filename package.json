{
  "scripts": {
    "build": "npm run build:htmx && npm run build:css-reset && npm run build:unocss",
    "build:htmx": "cp node_modules/htmx.org/dist/htmx.min.js src/main/resources/assets/htmx.js ",
    "build:css-reset": "cp node_modules/@unocss/reset/tailwind.css src/main/resources/assets/reset.css",
    "build:unocss": "unocss \"src/main/resources/templates/**/*.mustache\" -o src/main/resources/assets/styles.css",
    "format": "prettier --write **/*.{java,xml,md,yml,mustache,sh}",
    "lint": "prettier --check **/*.{java,xml,md,yml,mustache,sh}",
    "prepare": "husky install"
  },
  "dependencies": {
    "@julr/unocss-preset-forms": "^0.1.0",
    "@prettier/plugin-xml": "^3.2.2",
    "@unocss/reset": "^0.58.5",
    "htmx.org": "^1.9.10",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-java": "^2.5.0",
    "prettier-plugin-sh": "^0.14.0",
    "unocss": "^0.58.3"
  },
  "lint-staged": {
    "*.{java,xml,md,yml,mustache,sh}": "prettier --write"
  }
}
